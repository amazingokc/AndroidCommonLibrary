<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_state_page_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:focusable="true"
    android:clickable="true">

    <LinearLayout
        android:id="@+id/ll_state_state_page"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:visibility="gone"
        tools:visibility="visible"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_state_page_pic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:contentDescription="@null" />

        <TextView
            android:id="@+id/tv_state_page_tips"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="13dp"
            android:gravity="center_horizontal"
            android:lineSpacingExtra="10dp"
            android:textColor="@color/text_color666"
            android:textSize="15sp"
            tools:text="网络不咋给力\n请稍候重新尝试吧～"
            tools:visibility="visible" />

       <!-- <TextView
            android:id="@+id/tv_state_page_option"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/selector_statepage_button_kaoyaoshi"
            android:layout_marginTop="15dp"
            android:textColor="@color/colorPrimary_runde"
            android:textSize="13sp"
            tools:text="重新加载" />-->

        <TextView
            android:id="@+id/tv_state_page_option"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:textSize="13sp"
            tools:text="重新加载" />
        <View
            android:layout_width="fill_parent"
            android:layout_height="1.0px"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_loading_state_page"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

<!--        <pl.droidsonroids.gif.GifImageView-->
<!--            android:id="@+id/gif_loading_state_page"-->
<!--            android:layout_width="100dp"-->
<!--            android:layout_height="100dp"-->
<!--            android:src="@raw/loading_kys_gif"-->
<!--            />-->
        <pl.droidsonroids.gif.GifImageView
            android:id="@+id/gif_loading_state_page"
            android:layout_width="100dp"
            android:layout_height="100dp"
            />

        <TextView
            android:id="@+id/tv_loading_msg_state_page"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="@string/loading_default_tip"
            android:textColor="@color/text_color999"
            android:textSize="14sp"
            android:visibility="visible" />

    </LinearLayout>


</RelativeLayout>
