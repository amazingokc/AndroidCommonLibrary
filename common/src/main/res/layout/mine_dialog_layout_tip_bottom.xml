<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/ll_content_bottom_dialog_mine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        >
        <TextView
            android:id="@+id/tv_message_tip_bottom_dialog_mine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="40dp"
            android:gravity="center"
            android:textColor="@color/textColor"
            android:textSize="16sp"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:background="@color/line_color"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/tv_yes_tip_bottom_dialog_mine"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="是"
                android:textSize="16sp"
                android:textColor="@color/textColor1"
                />

            <View
                android:layout_width="0.1dp"
                android:layout_height="30dp"
                android:background="@color/line_color"
                android:layout_gravity="center_vertical"
                />

            <TextView
                android:id="@+id/tv_no_tip_bottom_dialog_mine"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="否"
                android:textSize="16sp"
                android:textColor="@color/textColor1"
                />

        </LinearLayout>

    </LinearLayout>

    <View
        android:id="@+id/view_region_cancle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/ll_content_bottom_dialog_mine"
        />

</RelativeLayout>