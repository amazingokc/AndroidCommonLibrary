        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
    </style>

    <style name="CustomProgressDialog" parent="@style/CustomDialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>

    </style>

    <style name="CustomProgressDialog_Animation" >
        <item name="android:windowEnterAnimation">@anim/out_alpha</item>
        <item name="android:windowExitAnimation">@anim/enter_alpha</item>

    </style>

    <style name="HomeDialog" parent="Theme.AppCompat.Light.Dialog.MinWidth">
        <item name="android:windowBackground">@android:color/transparent</item>
        <!--<item name="android:layout_marginBottom">0dp</item>-->
    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.NoActionBar.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ToolBarStyle" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="actionMenuTextColor">@android:color/white</item> <!--  颜色-->
        <item name="android:textSize">15sp</item> <!--  字体大小-->
        <item name="android:textStyle">normal</item>
    </style>

    <style name="ToolBarMenuTextColorStyleBlack" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="actionMenuTextColor">@android:color/black</item> <!--  颜色-->
    </style>

    <style name="ToolBarMenuTextColorStyleWhite" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="actionMenuTextColor">@android:color/white</item> <!--  颜色-->
    </style>

    <style name="ToolBarWhiteStyle" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="actionMenuTextColor">@android:color/black</item> <!--  颜色-->
        <item name="android:textSize">15sp</item> <!--  字体大小-->
        <item name="android:textStyle">normal</item>
        <item name="colorControlNormal">@color/black</item><!--返回键按钮颜色-->
        <item name="android:background">@color/colorToolbar</item>
    </style>

